<main class="d-flex flex-items-center flex-justify-center">
  <h1>All posts</h1><br />
  <div style="max-width: 600px;" >
    <% @posts.each do |post| %>
      <article class="markdown-body mt-7">
        <h2 class="d-flex flex-items-center flex-justify-between">
          <%= post.title %>
          <% if user_signed_in? %>
            <span class="f5 text-normal">Written by <span><%= post.user.name %></span></span>
          <% end %>
        </h2>
        <p><%= post.body %></p>
      </article>
    <% end %>
  </div>
</main>